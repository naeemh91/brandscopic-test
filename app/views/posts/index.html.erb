<h1>Listing all posts</h1>
<p>
<%= link_to "Create new post", new_post_path %>
</p>
<table>
 <tr>
  <th>Message</th>
 </tr>
 <% @posts.each do |post| %>
 <tr>
  <td><%= post.message %></td>
  <td><%= link_to 'Edit', edit_post_path(post) ,class: "btn btn-xs btn-primary" %></td>
  <td><%= link_to 'Show', post_path(post),class: "btn btn-xs btn-primary" %></td>
  <td><%= link_to 'Delete', post_path(post), method: :delete, class: "btn btn-xs btn-primary" , data: {confirm: "Are you sure?"} %></td>
 </tr>
 <% end %>
</table>